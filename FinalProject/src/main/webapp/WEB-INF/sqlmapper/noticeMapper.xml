<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.alj.dream.notice.dao.NoticeDao">
 
 
 	<select id="getNoticeList" resultType="com.alj.dream.notice.domain.Notice">
 	
 		SELECT notice_idx, notice_title, notice_regdate 
 		FROM notice limit #{arg0}, #{arg1}

 	
 	</select>
 	
 	<select id="getTotalNumOfNotice" resultType="String">
 	
 		select count(*) from notice;
 	</select>
 	
  	<insert id="insertNotice" parameterType="com.alj.dream.notice.domain.NoticeRegisterData">
 		insert into notice(admin_idx, notice_title, notice_content) values(#{admin_idx},#{notice_title},#{notice_content})
 	</insert>
 	<!-- #{arg0},#{arg1}를 사용할때는 매개변수가 여러개일시 사용하고,
 		 매개변수로 여러개를 객체로 만들어서 받을때는 parameterType 에 그 객체명의 풀 네임(경로)을 써주고 넣어주어야 할 값을 그 객체에 변수명과 일치시켜서 사용함 -->
 	<select id="getNotice" resultType="com.alj.dream.notice.domain.NoticeContent">
 		SELECT no.notice_idx, no.notice_title, no.notice_content, no.notice_regdate, no.notice_editdate, ad.admin_nm FROM
 			   dream.admin ad join dream.notice no
 			   ON
 			   ad.admin_idx=no.admin_idx
 			   WHERE no.notice_idx=#{arg0}
 			   
 	</select>
 
 	
 </mapper>
 
 